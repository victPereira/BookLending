@model IEnumerable<LendingModel>

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Lending</h1>
        <a class="btn btn-success mx-2" asp-controller="Lending" asp-action="Register">Register new lend</a>
    </div>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Receiver</th>
                <th scope="col">Supplier</th>
                <th scope="col">Book</th>
                <th scope="col">Date Att</th>
                <th></th>
            </tr>
        </thead>
        <tbody> 


            @if(Model != null)
            {
                @foreach(var lending in Model)
                {               
                    <tr>
                        <th scope="row">@lending.Receiver</th>
                        <td>@lending.Supplier</td>
                        <td>@lending.BookLend</td>
                        <td>@lending.DataEndAtt</td>
                        <td>
                            <a asp-controller="Lending" asp-action="Edit" asp-route-id="@lending.Id"  class="btn btn-warning mx-2">Edit</a>
                            <a asp-controller="Lending" asp-action="Delete" asp-route-id="@lending.Id" class="btn btn-danger mx-2">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>